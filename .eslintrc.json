{
    "plugins": [
        "prettier",
        "simple-import-sort",
        "unused-imports"
    ],
    "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
    "rules": {
        "prettier/prettier": "error",
        "simple-import-sort/imports": [
            "error",
            {
                "groups": [
                    // React first, then packages starting with a character, then packages starting with @
                    [
                        "^react$",
                        "^[a-z]",
                        "^@.*"
                    ],
                    // Imports starting with `../`
                    [
                        "^\\.\\.(?!/?$)",
                        "^\\.\\./?$"
                    ],
                    // Imports starting with `./`
                    [
                        "^\\./(?=.*/)(?!/?$)",
                        "^\\.(?!/?$)",
                        "^\\./?$"
                    ],
                    // Side effect imports
                    [
                        "^\\u0000",
                        "^\\u0000.*\u0000$"
                    ],
                    // Style imports
                    [
                        "^.+\\.s?css$"
                    ]
                ]
            }
        ]
    }
}
